<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ListView
        android:id="@+id/menu_category2"
        android:layout_width="709dp"
        android:layout_height="306dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/box_line"
        android:divider="#553311"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:listSelector="#46C69C6D"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_sub"
        app:layout_constraintVertical_bias="0.004">

    </ListView>

    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="7dp"
        android:background="#553311"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_search" />

    <TextView
        android:id="@+id/text_search"
        android:layout_width="465dp"
        android:layout_height="86dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|left"
        android:text="Search"
        android:textColor="#090808"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:background="#553311"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <include

        android:id="@+id/header_sub"
        style="@style/category_sub"
        layout="@layout/category_sub_header"
        android:layout_width="709dp"
        android:layout_height="66px"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/alger_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="759dp"
        android:layout_height="462dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"

        android:layout_marginBottom="68dp"
        android:numColumns="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="131dp"
        android:layout_height="95dp"
        app:srcCompat="@android:drawable/ic_secure"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>